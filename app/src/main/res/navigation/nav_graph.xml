<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.itaicuker.unimot.ui.fragments.MainFragment"
        android:label="Unimot"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_provisionFragment"
            app:destination="@id/provisionFragment"
            app:launchSingleTop="false" />
    </fragment>

    <fragment
        android:id="@+id/provisionFragment"
        android:name="com.itaicuker.unimot.ui.fragments.ProvisionFragment"
        android:label="Connect to remote"
        tools:layout="@layout/fragment_provision" />
