<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_tint">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_tint"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/background_tint"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cmd1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:tag="input"
                    android:text="input"
                    android:backgroundTint="?attr/colorSurface"
                    app:icon="@drawable/ic_baseline_input"
                    app:iconGravity="textStart" />

                <Button
                    android:id="@+id/cmd2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorSurface"
                    android:tag="off"
                    android:text="off" />

                <Button
                    android:id="@+id/cmd3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorSurface"
                    android:tag="power"
                    app:icon="@drawable/ic_baseline_power"
                    app:iconGravity="textStart"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/background_tint"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cmd4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorSurface"
                    android:tag="mode"
                    android:text="MODE" />

                <Button
                    android:id="@+id/cmd5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorSurface"
                    android:tag="dup"
                    app:icon="@drawable/ic_baseline_keyboard_arrow_up_24"
                    app:iconGravity="textStart"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/cmd6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorSurface"
                    android:tag="exit"
                    android:text="EXIT" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/background_tint"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cmd7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorSurface"
                    android:tag="dleft"
                    app:icon="@drawable/ic_baseline_keyboard_arrow_left_24"
                    app:iconGravity="textStart"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/cmd8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorSurface"
                    android:tag="ok"
                    android:text="OK" />

                <Button
                    android:id="@+id/cmd9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorSurface"
                    android:tag="dright"
                    app:icon="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:iconGravity="textStart"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/background_tint"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cmd10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorSurface"
                    android:tag="back"
                    android:text="back"
                    app:icon="@drawable/ic_baseline_arrow_back"
                    app:iconGravity="textStart" />

                <Button
                    android:id="@+id/cmd11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorSurface"
                    android:tag="ddown"
                    app:icon="@drawable/ic_baseline_keyboard_arrow_down_24"
                    app:iconGravity="textStart"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/cmd12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorSurface"
                    android:tag="vup"
                    app:icon="@drawable/ic_baseline_volume_up"
                    app:iconGravity="textStart"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/background_tint"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cmd13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorSurface"
                    android:tag="playpause"
                    app:icon="@drawable/ic_play_pause_fill0_wght400_grad0_opsz48"
                    app:iconGravity="textStart"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/cmd14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorSurface"
                    android:tag="home"
                    android:text="home"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/cmd15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorSurface"
                    android:tag="vdown"
                    app:icon="@drawable/ic_baseline_volume_down"
                    app:iconGravity="textStart"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>